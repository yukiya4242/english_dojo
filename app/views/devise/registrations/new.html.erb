<%= render 'layouts/header' %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", placeholder: "ユーザー名を入力してください" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレスを入力してください" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワードを入力してください" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワードを入力してください" %>

     <div class="actions">
       <%= f.submit "sign_up" %>
     </div>

  <% end %>
<%= render "devise/shared/links" %>


