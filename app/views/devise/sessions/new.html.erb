<%= render 'layouts/header' %>

<div class="login-body">
  <div class="login-page">
    <div class="form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "login-form"}) do |f| %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "email" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "password", class: "form-control", placeholder: "Password" %>
        <%= f.submit "Login", class: "form-submit" %>
        <p class="message">Not registered? <%= link_to "Create an account", new_user_registration_path %></p>
      <% end %>
    </div>
  </div>
</div>
<%#= render "devise/shared/links" %>

